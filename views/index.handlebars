<div class="container">
    <div class="row">
        <h1 class="text-center">Coding Knowledge</h1>
    </div>
    <div class="row">
        <h3 class="text-center">Keep track of what's been mastered and what needs work.</h3>
    </div>

    <div class="row">
        {{!-- Needs work --}}
        <div class="col-md-5">
            <h2>Needs Work!</h2>

            <ul>
                {{#each knowledge}}
                {{#unless known}}
                {{!-- Sets data-known to true, so that it knows to change to false when clicked --}}
                {{> knowledge/knowledge-block known=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-2">
        </div>

        {{!-- mastered --}}
        <div class="col-md-5">
            <h2>Known!</h2>

            <ul>
                {{#each knowledge}}
                {{#if known}}
                {{!-- Sets data-known to false, so that it knows to change to false when clicked --}}
                {{> knowledge/knowledge-block known=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
        </div>
        {{!-- form --}}
        <div class="col-md-6">
            {{!-- <h2>Add a Topic</h2> --}}
            <form class="create-form">

                <div class="form-row">
                    <label for="topic" class="h2 text-center">Add a Topic: </label>
                    <input type="text" class="form-text" id="topic" name="name" required>
                </div>

                <button type="submit" class="btn btn-danger btn-lg">Add</button>
            </form>
        </div>
        <div class="col-md-3">
        </div>


    </div>
</div>